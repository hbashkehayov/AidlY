# Application
APP_NAME=AidlY
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=aidly
DB_USERNAME=aidly_user
DB_PASSWORD=aidly_secret_2024

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret_2024
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# RabbitMQ Message QueueI
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=aidly_admin
RABBITMQ_PASSWORD=rabbitmq_secret_2024
RABBITMQ_VHOST=aidly

# MinIO Object Storage
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=aidly_minio_admin
MINIO_ROOT_PASSWORD=minio_secret_2024
MINIO_BUCKET=aidly-attachments
MINIO_DEFAULT_BUCKETS=aidly-attachments:public,aidly-avatars:public,aidly-exports:private

# Kong API Gateway
KONG_PROXY_PORT=8000
KONG_PROXY_SSL_PORT=8443
KONG_ADMIN_PORT=8001
KONG_ADMIN_SSL_PORT=8444
KONG_DB_PASSWORD=kong_secret_2024

# JWT Authentication
JWT_SECRET=your-secret-jwt-key-please-change-this-in-production
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@aidly.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Queue
QUEUE_DRIVER=rabbitmq
QUEUE_FAILED_DRIVER=database

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv,txt,zip

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Integration (Future Use)
AI_ENABLED=false
AI_PROVIDER=none
AI_API_KEY=
AI_WEBHOOK_SECRET=
AI_MODEL_VERSION=

# Monitoring
SENTRY_DSN=
MONITORING_ENABLED=false

# Business Hours
DEFAULT_TIMEZONE=UTC
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# SLA Defaults (in minutes)
DEFAULT_FIRST_RESPONSE_TIME=120
DEFAULT_RESOLUTION_TIME=1440

# Feature Flags
FEATURE_KNOWLEDGE_BASE=true
FEATURE_AUTOMATION=true
FEATURE_AI_SUGGESTIONS=false
FEATURE_CHAT_WIDGET=false
FEATURE_MOBILE_APP=false