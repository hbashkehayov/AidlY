APP_NAME=AidlY-Email-Service
APP_ENV=development
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8005
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=host.docker.internal
DB_PORT=5432
DB_DATABASE=aidly
DB_USERNAME=aidly_user
DB_PASSWORD=aidly_secret_2024

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret_2024

# IMAP Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_ENCRYPTION=ssl
IMAP_VALIDATE_CERT=true

# SMTP Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=support@aidly.com
MAIL_FROM_NAME="${APP_NAME}"

# Email Processing
EMAIL_POLL_INTERVAL=300
EMAIL_MAX_ATTACHMENTS=5
EMAIL_MAX_ATTACHMENT_SIZE=10485760
EMAIL_ALLOWED_ATTACHMENT_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv,txt,zip

# Queue Configuration
RABBITMQ_HOST=host.docker.internal
RABBITMQ_PORT=5672
RABBITMQ_USER=aidly_admin
RABBITMQ_PASSWORD=rabbitmq_secret_2024
RABBITMQ_VHOST=aidly

# Ticket Service API
TICKET_SERVICE_URL=http://host.docker.internal:8002
TICKET_SERVICE_API_KEY=

# Client Service API
CLIENT_SERVICE_URL=http://host.docker.internal:8003
CLIENT_SERVICE_API_KEY=

# MinIO Configuration
MINIO_HOST=host.docker.internal
MINIO_PORT=9000
MINIO_ROOT_USER=aidly_minio_admin
MINIO_ROOT_PASSWORD=minio_secret_2024
MINIO_BUCKET=aidly-attachments
MINIO_USE_SSL=false
